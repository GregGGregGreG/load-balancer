                        </releases>
        </repository>
                <repository>
                        <id>jboss-snapshots</id>
                        <name>JBoss Snapshot Repository</name>
                        <url>http://snapshots.jboss.org/maven2</url>
                        <releases>
                                <enabled>false</enabled>
                        </releases>
                        <snapshots>
                                <enabled>true</enabled>
                        </snapshots>
                </repository>
        </repositories>

  <pluginRepositories>
